@page
@model RazorWebApp.Pages.SubscribeModel
@{
}

<h1>Subscribe</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="Email">Email for customer</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="Email" />
    </div>

    <div class="form-group">
        <h5>Selected Plan</h5>
        @Model.SelectedPlan.Name
    </div>

    <div class="form-group">
        <h5>Payment Processor</h5>
        <input type="radio" asp-for="PaymentProcessor" value="stripe" /> Stripe
        <input type="hidden" asp-for="Price" value="@Model.SelectedPlan.PriceId" />
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Pay now</button>
</form>